<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backs"
    tools:context="com.example.codetribe.resultsreport.LoginActivity">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:id="@+id/textView"
        android:textColor="#E4E3E4"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To"
        android:textColor="#E4E3E4"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Account"
        android:textColor="#E4E3E4"
        android:textSize="25sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/txtemail"
        android:singleLine="true"
        android:drawablePadding="10dp"

        android:hint="Enter User Email"
        android:textColorHint="#cccccc"
        android:textColor="#759D9C"
        android:textSize="20sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:hint="Enter User Password"

        android:textSize="20sp"
        android:textColorHint="#cccccc"
        android:textColor="#759D9C"
        android:id="@+id/txtpass"
        android:layout_below="@+id/txtemail"
        android:layout_alignLeft="@+id/txtemail"
        android:layout_alignStart="@+id/txtemail"
        android:layout_alignRight="@+id/txtemail"
        android:layout_alignEnd="@+id/txtemail" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#E4E3E4"
        android:text="TEACHER"
        android:background="#8B8C89"
        android:textSize="15sp"
        android:id="@+id/teachers"
        android:onClick="teachers"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#E4E3E4"
        android:text="Log in"
        android:background="#8B8C89"
        android:textSize="15sp"
        android:id="@+id/btnsignin"
        android:onClick="btnsignin"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/txtpass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you new? Sign up now."
        android:id="@+id/btnreg"
        android:textColor="#E4E3E4"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/btnsignin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>